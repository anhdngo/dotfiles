# Directory Shortcuts
alias dt="~/Desktop"
alias dl="~/Downloads"
alias doc="~/Documents"
# alias cf="$CONFIG"
alias cf="$DOTFILES"
alias ws="$WS"
alias as="$AS"

alias pc="~/pCloudDrive"
