# Environment Variables
export EDITOR=/usr/bin/nvim
export WS=$HOME/Workspace
export AS=$HOME/Assets
export DOTFILES=$HOME/.dotfiles

mkdir -p "$WS"
mkdir -p "$AS"

# Ease of Use
alias sl="ls"
alias l="ls"
alias ll="ls -lahF"
alias rl="exec $SHELL"
alias :q=exit
alias c=clear
alias vo=nvim
alias vi=nvim
alias vim=nvim
alias g=git
alias dk=docker
alias ack=ag
alias pthon=python
alias py=python
alias e="dolphin . &; disown"
alias f="dolphin . &; disown"
alias neofetch="fastfetch"

alias encrypt="7z a -p -mx=9 -mhe -t7z"

